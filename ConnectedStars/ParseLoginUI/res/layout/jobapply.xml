<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View android:layout_height="50dp"
        android:layout_width="wrap_content"
        />
    <RelativeLayout
        android:id="@+id/FileBrowserLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:orientation="horizontal"
        android:clickable="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/fileBrowser"
            android:background="@drawable/disc"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tap To Open File Browser"
            android:id="@+id/OpenFileBrowser"
            android:layout_toRightOf="@+id/fileBrowser"/>
    </RelativeLayout>
    <View android:layout_height="30dp"
        android:layout_width="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <View
            android:layout_height="2dp"
            android:layout_width="wrap_content"
            android:background="#D3D3D3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="OR" />
        <View
            android:layout_height="2dp"
            android:layout_width="wrap_content"
            android:background="#D3D3D3"
            />
        <View android:layout_height="30dp"
            android:layout_width="wrap_content"
            />
        <Button
            android:id="@+id/referbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginRight="5dp"
            android:drawableLeft="@drawable/referbutton"
            android:layout_gravity="center" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/bottomactionBar">

        <include layout="@layout/bottombar" />
    </LinearLayout>


</LinearLayout>